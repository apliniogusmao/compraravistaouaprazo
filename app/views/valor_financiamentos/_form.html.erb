<%= form_for(@valor_financiamento, :html => {  :class => 'form-horizontal'}) do |f| %>

<div class="control-group">
	<%= f.label :numeromeses,  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :numeromeses, :required => true  %>
	</div>
</div>
<div class="control-group">
	<%= f.label :taxadejuros,  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :taxadejuros, :required => true  %>
	</div>
</div>
<div class="control-group">
	<%= f.label :valordasparcelas,  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :valordasparcelas, :required => true  %>
	</div>
</div>
<div class="control-group">
	<div class="controls">
		<%= f.submit  "Calcular" , :class=> 'btn btn-primary btn-large'%>
	</div>
</div>
<% end %>