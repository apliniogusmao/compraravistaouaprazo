<%= form_for(@valor_financiamento, :html => {  :class => 'form-horizontal'}) do |f| %>
<div class="control-group">
	<%= f.label t('valor_financiamento.new.numeromeses'),  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :numeromeses, :required => true  %>
	</div>
</div>
<div class="control-group">
	<%= f.label t('valor_financiamento.new.taxajuros'),  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :taxadejuros, :required => true  %>
	</div>
</div>
<div class="control-group">
	<%= f.label t('valor_financiamento.new.valordasparcelas'),  :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :valordasparcelas, :required => true  %>
	</div>
</div>
<div class="control-group">
	<div class="controls">
		<%= f.submit  "Calcular" , :class=> 'btn btn-primary btn-large'%>
	</div>
</div>
<% end %>