		<%= csrf_meta_tags %>
	</head>
	<body>

		<header>
			<h3>Comprar a vista ou a prazo ?</h3>
		</header>

		<nav>
			<ul>
				<li>
					<%= link_to "Calcular prestação",  new_valor_prestaco_path %>
