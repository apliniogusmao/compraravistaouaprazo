				<li>
					<%= link_to "Calcular valor do financiamento",  new_valor_financiamento_path %>
				</li>
				<li>
					<%= link_to "Calcular percentual da taxa de juros",  new_taxa_de_juro_path %>
				</li>
				<li>
					<%= link_to "Calcular quantidade de meses",  new_quantidade_de_mese_path %>
				</li>
			</ul>
		</nav>

		<section id="informe">
			<%= render 'home/informativo.html.erb'%>
		</section>

		<section>
			<%= yield %>
		</section>

		<footer>
			<p>
				&copy; Copyright  by Antônio Gusmão
			</p>
		</footer>

	</body>
</html>