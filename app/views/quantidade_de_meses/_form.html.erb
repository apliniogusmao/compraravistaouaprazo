<%= form_for(@quantidade_de_mese, :html => {  :class => 'form-horizontal'}) do |f| %>
<div class="control-group">
	<%= f.label t('quantidade_de_mese.new.jurosmensal'), :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :jurosmensal, :required => true, :step => '0.01', :min => '0', :max => '99', :title => t('mensagem.taxadejuros')   %>
	</div>
</div>
<div class="control-group">
	<%= f.label t('quantidade_de_mese.new.valorprestacao'), :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :valorprestacao, :required => true, :required => true, :step => '1', :min => '1', :title => t('mensagem.valorprestacao')  %>
	</div>
</div>
<div class="control-group">
	<%= f.label t('quantidade_de_mese.new.valorfinanciado'), :class => 'control-label' %>
	<div class="controls">
		<%= f.number_field :valorfinanciado, :required => true, :required => true, :step => '1', :min => '1', :title => t('mensagem.valordofinanciamento')  %>
	</div>
</div>
<div class="control-group">
	<div class="controls">
		<%= f.submit  "Calcular", :class=> 'btn btn-primary btn-large' %>
		<%= f.submit "Limpar", :type => "reset", :class=> 'btn btn-info btn-small'  %>
	</div>
</div>
<% end %>