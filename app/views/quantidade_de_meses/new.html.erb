<% provide(:title, t('quantidade_de_mese.new.titulo')) %>
<div class="page-header">
  <h1><%= t 'quantidade_de_mese.new.titulo' %></h1>
</div>

<div class="row-fluid">
  <div class="span6">
    <%= render 'form' %>
  </div>
  <div class="span6">
    <% if @apresentar_mensagem %>
        <p>
          O perido é <%= @quantidade_meses.to_i %>
        </p>

        <p class="notice">Valor a vista menor que <%= converter_para_moeda(@valor_presente) %> vale a pena pagar à vista
          ou solicitar um desconto de <%= converter_para_moeda(@porcentagem) %> %</p>
    <% end %>
  </div>
</div>
